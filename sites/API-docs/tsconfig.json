{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["../main-site/src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@public/*": ["../main-site/public/*"],
            "@styles/*": ["src/styles/*"]
        },
        "strictNullChecks": true
    },
    "exclude": ["node_modules", "dist"]
}
