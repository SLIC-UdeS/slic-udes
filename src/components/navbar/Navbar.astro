---
import EventIndicator from '@components/event/EventIndicator.svelte';
import NavbarToc from '@components/navbar/NavbarToc.svelte';
import NavbarDocsNav from '@components/navbar/NavbarDocsNav.svelte';
import NavbarDocsNavTitle from '@components/navbar/NavbarDocsNavTitle.astro';
import SidebarNav from '@components/sidebar/SidebarNav.astro';
import NfCoreLogoDarkbg from '@assets/logos/nf-core-logo-darkbg.svg?raw';
import NfCoreLogo from '@assets/logos/nf-core-logo.svg?raw';
import IconSocial from '@components/IconSocial.astro';
import { getCollection } from 'astro:content';
import ThemeSwitch from '@components/ThemeSwitch.svelte';
import Icon from 'astro-icon';

export interface Props {
    navTocHeadings?: object[];
    title?: string;
}
let sections: { section_name: string; children: {}[] } | never[] = [];
if (Astro.url.pathname.startsWith('/docs/')) {
    const docs = await getCollection('docs');
    const subpages = docs.filter((doc) => {
        return doc.slug.split('/').length === 2;
    });
    sections = [
        { section_name: 'Usage', children: [] },
        { section_name: 'Contributing', children: [] },
    ];
    subpages.map((doc) => {
        if (doc.slug.startsWith('usage/')) {
            let index = sections.findIndex((section) => section.section_name === 'Usage');
            sections[index].children.push({ title: doc.data.title, slug: '/docs/' + doc.slug });
        }
        if (doc.slug.startsWith('contributing/')) {
            let index = sections.findIndex((section) => section.section_name === 'Contributing');
            sections[index].children.push({ title: doc.data.title, slug: '/docs/' + doc.slug });
        }
    });
}

const event_type_icons = {
    bytesize: 'fa-solid fa-apple-core',
    hackathon: 'fa-solid fa-laptop-code',
    talk: 'fa-solid fa-presentation',
    training: 'fa-solid fa-chalkboard-teacher',
};

const { navTocHeadings = [], title } = Astro.props;
---

<nav
    class="navbar fixed-top navbar-expand-md bg-body-secondary text-body-secondary shadow-sm d-print-none py-0 py-md-2"
>
    <div class="container">
        <a class="navbar-brand d-md-none w-25" href="/">
            <div class="hide-dark">
                <Fragment set:html={NfCoreLogo} />
            </div>
            <div class="hide-light">
                <Fragment set:html={NfCoreLogoDarkbg} />
            </div>
        </a>
        {navTocHeadings.length > 0 && <NavbarToc headings={navTocHeadings} client:visible />}
        <button
            class="navbar-toggler border-0"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-md-center align-items-md-stretch" id="navbarCollapse">
            <ul class="navbar-nav">
                <li class="nav-item p-1">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item p-1">
                    <a class="nav-link" href="/pipelines/">Pipelines</a>
                </li>
                <li class="nav-item p-1 dropdown">
                    <a class="nav-link dropdown-toggle" href="/about/" role="button" data-bs-toggle="dropdown">
                        Resources
                    </a>
                    <ul class="dropdown-menu bg-body-secondary text-body-secondary shadow-sm">
                        <li><span class="dropdown-header">Configs & tools</span></li>
                        <li><a class="dropdown-item" href="/configs/">Shared Configs</a></li>
                        <li><a class="dropdown-item" href="/tools/">Tools</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><span class="dropdown-header">Components</span></li>
                        <li><a class="dropdown-item" href="/modules/">Modules</a></li>
                        <li><a class="dropdown-item" href="/subworkflows/">Subworkflows</a></li>
                    </ul>
                </li>
                <li class="nav-item p-1">
                    <a class="nav-link" href="/docs/">Docs</a>
                </li>
                <li class="nav-item p-1 d-flex align-items-center">
                    <EventIndicator client:idle>
                        <Icon name="circle" />
                    </EventIndicator>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="/events/" role="button" data-bs-toggle="dropdown">
                            Events
                        </a>
                        <ul class="dropdown-menu bg-body-secondary text-body-secondary shadow-sm">
                            <li>
                                <a class="dropdown-item" href="/events/bytesize/"
                                    ><i class="fa-solid fa-apple-core me-2"></i>bytesize</a
                                >
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/hackathon/"
                                    ><i class="fa-solid fa-laptop-code me-2"></i>hackathon</a
                                >
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/talk/"
                                    ><i class="fa-solid fa-presentation me-2"></i>talk</a
                                >
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/training/"
                                    ><i class="fa-solid fa-chalkboard-teacher me-2"></i>training</a
                                >
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item p-1 dropdown">
                    <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown"> About</a>
                    <ul class="dropdown-menu bg-body-secondary text-body-secondary shadow-sm">
                        <li><span class="dropdown-header">Community</span></li>
                        <!-- <li><a class="dropdown-item" href="/contributors/">Blog</a></li> -->
                        <li><a class="dropdown-item" href="/about/">About nf-core</a></li>
                        <li><a class="dropdown-item" href="/contributors/">Contributors</a></li>
                        <li><a class="dropdown-item" href="/code_of_conduct/">Code of conduct</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><span class="dropdown-header">Initiatives</span></li>
                        <li><a class="dropdown-item" href="/mentorships/">Mentorships</a></li>
                        <li><a class="dropdown-item" href="/publications/">Publications</a></li>
                        <li><a class="dropdown-item" href="/stats/">Statistics</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="/join/">Join nf-core</a></li>
                    </ul>
                </li>
            </ul>
            <div class="ms-auto d-none d-md-block align-self-center px-2 py-1">
                <ThemeSwitch client:load>
                    <i class="icon" slot="light"><Icon name="sun" width={'14pt'} /></i>
                    <i class="icon" slot="dark"><Icon name="moon" width={'14pt'} /></i>
                </ThemeSwitch>
            </div>
            <div class="vr d-none d-xl-inline mx-3"></div>
            <hr class="d-md-none" />
            <div
                class="social-icons d-print-none d-flex align-items-center d-md-none d-xl-block align-self-center mb-3 mb-md-0"
            >
                <IconSocial
                    href="https://github.com/nf-core/"
                    title="GitHub"
                    icon="fa-brands:github"
                    icon_dark="fa-brands:github"
                    additionalClass="text-body monochrome me-1"
                />
                <IconSocial
                    href="https://twitter.com/nf_core"
                    icon="logos:twitter"
                    title="Twitter"
                    additionalClass="monochrome me-1"
                />
                <!-- <IconSocial
                    marginLeft="0"
                    marginRight="1rem"
                    href="https://mstdn.science/@nf_core"
                    title="Mastodon"
                    icon="logos:mastodon-icon"
                    additionalClass="monochrome me-1"
                /> -->
                <IconSocial
                    href="https://www.youtube.com/@nf-core"
                    icon="mdi:youtube"
                    title="YouTube"
                    additionalClass="monochrome me-1"
                    color="red"
                />
                <IconSocial
                    href="https://nf-co.re/join/slack/"
                    title="Slack"
                    icon="logos:slack-icon"
                    additionalClass="monochrome me-1"
                />
                <div class="d-md-none ms-auto px-2 py-1">
                    <ThemeSwitch client:load>
                        <i class="icon" slot="light"><Icon name="sun" width={'14pt'} /></i>
                        <i class="icon" slot="dark"><Icon name="moon" width={'14pt'} /></i>
                    </ThemeSwitch>
                </div>
            </div>
            <div class="d-none d-lg-block vr mx-3"></div>
            <a class="d-md-none btn d-block btn-success mb-3" href="/join/"> Join nf-core</a>
            <a class="d-none d-lg-block btn btn-success align-self-center" href="/join/"> Join nf-core</a>
        </div>
    </div>
</nav>
{
    Astro.url.pathname.includes('/docs/') && (
        <NavbarDocsNav client:visible>
            <NavbarDocsNavTitle slot="title" title={title} />
            <SidebarNav slot="menu" items={sections} />
        </NavbarDocsNav>
    )
}

<style lang="scss">
    @import '@styles/_variables.scss';

    .navbar.fixed-top {
        .navbar-brand {
            margin-top: 0.25rem;
            margin-bottom: 0.25rem;
            :global(svg) {
                height: 25px;
            }
        }
        // add wider margins on larger screens
        @include media-breakpoint-up(md) {
            padding: 0.2rem 1rem;
            .navbar-nav > li > a {
                margin-left: 1rem;
                margin-right: 1rem;
                transition: ease-in-out color 0.1s;
            }
        }
        @include media-breakpoint-down(md) {
            .navbar-brand {
                left: 0;
                margin-left: 0;
                margin-right: 0;
            }
        }
        li .dropdown-menu {
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            border-top: 0;
            margin-top: calc($navbar-padding-y/3);
            box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);
        }
        .collapse.show {
            max-height: 80vh;
            overflow-y: auto;
            li .dropdown-menu {
                border: none;
            }
        }
        .navbar-toggler:focus-within {
            box-shadow: none;
        }
    }
    .icon :global(svg) {
        fill: $navbar-light-color;
        :global(.active) & {
            fill: $white;
        }
    }
</style>
