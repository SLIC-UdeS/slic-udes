---
import MarkdownTocLayout from '@layouts/MarkdownTocLayout.astro';
import { getCollection } from 'astro:content';
export async function getStaticPaths() {
    const docs = await getCollection('tools');
    return docs.map((toolPage) => ({
        params: {
            toolPage: toolPage.slug,
        },
        props: {
            toolPage: toolPage,
        },
    }));
}
const title = '';
const subtitle = '';
let { headings, Content, remarkPluginFrontmatter } = await Astro.props.toolPage.render();
// filter out headings that are higher than max_heading_depth
// headings = headings.filter((h) => h.depth <= max_heading_depth);
// TODO: update github url
// const md_github_url = 'https://github.com/nf-core/nf-co.re/blob/master/markdown/docs/' + Astro.props.doc.id;
---

<MarkdownTocLayout
    title={title}
    subtitle={subtitle}
    headings={headings}
    left_sidebar={true}
    sections={[
        {
            section_name: 'Tools',
            children: [
                { title: 'Introduction', slug: '/tools/', order: 1 },
                { title: 'API', slug: '/tools/api/', order: 2 },
            ],
        },
    ]}
>
    <Content />
</MarkdownTocLayout>
